package views

import (
	"strconv"
	"strings"
	"time"
)

templ ProductsPage(data ProductsPageData) {
	<!doctype html>
	<html lang="en">
		<head>
			<meta charset="utf-8" />
			<meta name="viewport" content="width=device-width, initial-scale=1" />
			<title>{ data.Base.Title }</title>
			<link rel="stylesheet" href={ "/static/app.css?v=" + data.Base.StaticVersion } />
			<script src={ data.Base.HTMXSrc }></script>
			<script src="https://unpkg.com/htmx.org@1.9.12/dist/ext/sse.js"></script>
			<script src={ "/static/products.js?v=" + data.Base.StaticVersion }></script>
		</head>
		<body
			hx-ext="sse"
			sse-connect={ productsEventsQS(data.OnlyMissing, data.NameQuery, data.SelectedGroupIDs, data.Page) }
		>
			<script src={ "/static/client_id.js?v=" + data.Base.StaticVersion }></script>
			@Topbar(data.Base)
			<main class="container">
				@ProductsContent(data)
			</main>
			<footer class="container footer">
				<span>© { strconv.Itoa(time.Now().Year()) }</span>
			</footer>
		</body>
	</html>
}

